{
	"name": "xq-tab-form",
	"version": "1.0.3",
	"description": "一个基于Bootstrap5的Tab标签页的小组件，能让HTML5表单验证的提示信息在Bootstrap5的Tab标签页能正常显示。",
	"files": [
		"dist"
	],
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"dev": "vite serve src/",
		"html": "vite build src/",
		"build": "npx unbuild && rollup ./dist/index.cjs --format iife --file ./dist/xq-tab-form.js && npx xq-banner"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/xqkeji/xq-tab-form.git"
	},
	"keywords": [
		"HTML5",
		"JavaScript",
		"TypeScript",
		"BootStrap5",
		"Tab",
		"Form",
		"表单验证"
	],
	"author": "xqkeji.cn",
	"license": "SSPL-1.0",
	"homepage": "https://xqkeji.cn/demo/xq-tab-form/",
	"dependencies": {
		"@popperjs/core": "^2.11.6",
		"bootstrap": "^5.2.2"
	},
	"devDependencies": {
		"@types/bootstrap": "^5.2.5",
		"@types/node": "^18.11.0",
		"sass": "^1.55.0",
		"typescript": "^4.8.4",
		"unbuild": "^0.9.4",
		"vite": "^3.2.0",
		"vite-plugin-xq-cp-dep": "^1.0.3",
		"vite-plugin-xq-include": "^1.0.2",
		"xq-banner": "^1.0.5"
	}
}
